<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_user_details"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/edUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/genderSpinner"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.shawnlin.numberpicker.NumberPicker
            android:layout_weight="1"
            android:id="@+id/number_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimaryDark"
            app:np_formatter=""
            app:np_max="59"
            app:np_min="0"
            app:np_selectedTextColor="@color/colorPrimaryDark"
            app:np_selectedTextSize="18sp"
            app:np_textColor="@color/colorPrimaryDark"
            app:np_textSize="15sp"
            app:np_typeface=""
            app:np_value="3" />

    </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>